    <test name="Iterate-mediator-Test" preserve-order="true" verbose="2">
        <packages>
            <package name="org.wso2.carbon.esb.mediator.test.iterate"/>
        </packages>
		<classes>
           <class name="org.wso2.carbon.esb.mediator.test.iterate.InvalidNamespaceTestCase">
